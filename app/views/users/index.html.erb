<div class="container">
  <div class="row">
    <h3>Users</h3>
    <div class="column">
      <table class="table">
        <tbody>
          
          <% @users.each do |user| %>
            <tr>
              <td><%= link_to user.name, user %></td>
              <td>
                <%= form_for user do |f| %>
                  <%= f.radio_button :admin, true %>Admin
                  <%= f.radio_button :admin, false %>User
                  <%= f.submit %>
                <% end %>
              </td>

            </tr>
          <% end %>

        </tbody>
      </table>
    </div>
  </div>
</div>
