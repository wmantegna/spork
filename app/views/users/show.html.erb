<h2>
	<%= @user.name if @user.name %>
	<% if @user.admin %>
		<small>(Admin)</small>
	<% end %>
</h2>


<table class="table">
	<tr>
		<th>Preferences</th>
		<th>Restrictions</th>
	</tr>
	<tr>
		<td>

			<% @user.preferences.each do |p| %>
				<%= p.name %><br />
			<% end %>

		</td>
		<td>

			<% @user.restrictions.each do |r| %>
				<%= r.name %><br />
			<% end %>

		</td>
	</tr>
</table>

<%= link_to 'Edit', edit_user_path(@user) %> | 
<%= link_to 'Back', users_path %>